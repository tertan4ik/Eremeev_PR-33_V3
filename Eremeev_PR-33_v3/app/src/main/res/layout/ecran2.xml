<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="411dp"
    android:layout_height="731dp"
    android:orientation="vertical"
    tools:context=".Ecran2Activity">


<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="55dp"
    android:orientation="vertical"
    >
    <TextView
        android:layout_width="130dp"
        android:layout_height="20dp"
android:textColor="@color/blue"
        android:text="В главное меню"
        />
    <Button
        android:layout_width="80dp"
        android:layout_height="35dp"
        android:background="@drawable/strelkaleft"
                />

</LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="70dp"

            android:background="@color/white"
            android:orientation="horizontal">


            <TextView
                android:layout_width="300dp"
                android:layout_height="65dp"
                android:layout_marginLeft="61dp"
                android:layout_marginTop="8dp"
                android:gravity="center"
                android:text="Расчет площади"
                android:textColor="@color/V3color"
                android:textSize="36dp"
                android:textStyle="bold" />
        </LinearLayout>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="519dp"
        android:background="@color/golub"
        android:orientation="vertical"
        android:layout_marginTop="55dp"
        >
       <Spinner
           android:layout_width="300dp"
           android:layout_height="40dp"
           android:layout_gravity="center_horizontal"
           android:layout_marginTop="5dp"
           android:background="@drawable/spinerform"
           android:id="@+id/spinner"
           />
        <EditText
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:background="@drawable/spinerform"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="40dp"
            android:hint="Введите количество метров"
            android:textAlignment="center"
            />

        <Button
            android:layout_width="350dp"
            android:layout_height="70dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="40dp"
            android:background="@drawable/buttonshape"
            android:text="Рассчитать"
            android:textColor="@color/white"
            android:textColorHint="@color/black"
            android:textSize="24dp"
            android:textStyle="bold" />
        <TextView
            android:layout_width="200dp"
            android:layout_height="60dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="40dp"
            android:background="@drawable/spinerform"
            android:text="Результат"
            android:textSize="19dp"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textStyle="bold"
            />


    </LinearLayout>


</LinearLayout>